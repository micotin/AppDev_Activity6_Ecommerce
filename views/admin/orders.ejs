        <div class="text-end mb-4">
            <a href="/admin/dashboard" class="btn btn-primary">Back to Dashboard</a>
        </div>

        <% if (orders.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= order.name %></td>
                            <td><%= order.email %></td>
                            <td><%= order.address %></td>
                            <td><%= order.payment_method %></td>
                            <td><%= new Date(order.created_at).toLocaleString() %></td>
                            <td>
                                <a href="/admin/orders/edit/<%= order.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/admin/orders/delete/<%= order.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this enchanted order?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info mt-4" role="alert">
                No orders found.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
